<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caoyuan.cms.dao.CommentMapper">
	<resultMap type="comment" id="commentMap">
		<id column="id" property="id"/>
		<result column="content" property="content"/>
		<result column="created" property="created"/>
		<association property="user" javaType="user" select="com.caoyuan.cms.dao.UserMapper.selectByPrimaryKey" column="user_id"></association>
		<association property="article" javaType="ArticleWithBLOBs" select="com.caoyuan.cms.dao.ArticleMapper.selectByPrimaryKey" column="article_id"></association>
	</resultMap>
	
	<select id="selects" resultMap="commentMap">
		select * from cms_comment  where article_id = #{id} order by created desc
	</select>
	
	<select id="selectbyId" resultMap="commentMap">
		select * from cms_comment  where user_id = #{id} order by created desc
	</select>

	<insert id="insert">
		insert into cms_comment values(default,#{user.id},#{article.id},#{content},#{created})
	</insert>
	
	<delete id="deleteComment">
		delete from cms_comment where id = #{id}
	</delete>
</mapper>